#include <iostream>
#include <string>
#include "One.h"
#include "Two.h"


using namespace std;

void print(string a,string b,int e)
{
cout«a«","«b«" E"«e«endl;
}
int main()
{
int e;
string a,b,newa,newb;
a=getA();
b=getB();
e=findE(a,b);
newa=newA(a,b);
newb=newB(a,b);
print(newa,newb,e);
system("pause");
}
