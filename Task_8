#include <iostream>
#include <string>
#include "One.h"

using namespace std;

#ifndef TWO_H
#define TWO_H

string newA(string a, string b);
string newB(string a, string b);

#endif
______________________________________________________________________________________________________________________________

#include <iostream>
#include <string>
#include "One.h"
#include "Two.h"

using namespace std;

string newA(string a, string b)
{
int lenB,lent;
string t;
lenB=b.size();
if (a=="0")
{
lent=lenB;
for(int i=0;i<lent;i++)
{
if(lenB!=1)
{
t=b[0];
if(t=="0")
{
b.erase(b.begin());
lenB=b.size();
}
}
}
a=b[0];
}
else
{
a=a[0];
}
return a;
}
string newB(string a, string b)
{
int lenB,lent;
string t;
lenB=b.size();
if (a=="0")
{
lent=lenB;
for(int i=0;i<lent;i++)
{
if(lenB!=1)
{
t=b[0];
if(t=="0")
{
b.erase(b.begin());
lenB=b.size();
}
}
}
b.erase(b.begin());
}
else
{
a.erase(a.begin());
b=a+b;
}
return b;
}
