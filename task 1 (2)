#include"iostream"
using namespace std;

class list
{
private:
	char**a;
	int*l;
	int n;
public:

	void test()
	{
		list c;
		c.n = n;
		cout << c.n<<endl;
		c.a = a;
		c.l = l;
		c.show();
	}

	void create(int m)
	{
		int i;
		n = m;
		a = new char*[n];
		for (i = 0; i < n; i++)
		{
			a[i] = new char[20];
		}
		l = new int[n];	
	}

	void input()
	{
		char s[20];
		int i, j;
		gets_s(s);
		for (i = 0; i < n; i++)
		{
			cout << "input word " << i + 1 << ' ';
			gets_s(s);
			l[i] = strlen(s);
			for (j = 0; j < strlen(s); j++)
			{
				a[i][j] = s[j];
			}
		}
	}

	list sort1()
	{
		list c;
		int i, j, g, m, mn;
		int*lb = new int[n];
		int*w = new int[n];
		char**b = new char*[n];
		for (i = 0; i < n; i++)
		{
			b[i] = new char[20];

		}
		for (i = 0; i < n; i++)
		{
			w[i] = 0;
		}

		for (i = 0; i < n; i++)
		{
			m = 999999999;
			mn = 0;
			for (j = 0; j < n; j++)
			{
				if (w[j] == 0)
				{
					if ((int)a[j][0] < m)
					{
						m = (int)a[j][0];
						mn = j;
					}
					if ((int)a[j][0] == m)
					{
						g = 0;
						while ((int)a[j][g] == m)
						{
							g++;
						}
						if ((int)a[j][g] < m)
						{
							m = (int)a[j][0];
							mn = j;
						}
					}
				}
			}
			w[mn] = 1;
			for (g = 0; g < l[mn]; g++)
			{
				b[i][g] = a[mn][g];
			}
			lb[i] = l[mn];

		}
		

		c.n = n;
		c.a = b;
		c.l = lb;
		return(c);


	}

	void count()
	{
		int i,  j, g,  x;
		int*w = new int[n];
		int*k = new int[n];

		for (i = 0; i < n; i++)
		{
			w[i] = 0;
		}
		for (i = 0; i < n; i++)
		{
			k[i] = 1;
		}

		for (i = 0; i < n; i++)
		{
			if (w[i] == 0)
			{
				for (j = i + 1; j < n; j++)
				{
					if (l[i] == l[j])
					{
						x = 1;
						for (g = 0; g < l[i]; g++)
						{
							if (a[i][g] != a[j][g])
							{
								x = 0;
							}
						}
						if (x == 1)
						{
							k[i]++;
							w[j] = 1;
						}
					}
				}
				for (g = 0; g < l[i]; g++)
				{
					cout << a[i][g];
				}
				cout << " -- " << k[i] << endl;
			}
		}
	}

	void show()
	{
		int i, j;
		for (i = 0; i < n; i++)
		{
			for (j = 0; j < l[i]; j++)
			{
				cout << a[i][j];
			}
			cout << endl;
		}
	}

	//~list()
	//{
	//	cout << "game over" << endl;
	//	/*for(int i=0;i<n;i++)
	//	{
	//		delete a[i];
	//	}
	//	delete[] a;
	//	delete l;*/
	//}
};

int main()
{
	list a,b;
	int n;
	cout << "n= ";
	cin >> n;
	b.create(n);
	a.create(n);
	a.input();
	a=a.sort1();
	a.count();

	system("pause");
}
