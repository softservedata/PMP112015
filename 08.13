using System;

namespace ConsoleApplication1
{
    class Program
    {
        static double funk(double x)
        {
            return Math.Log(x)+Math.Pow(x,2)-4;
        }
        static void Main(string[] args)
        {
            double epc = 0.0000001;
            double left=-100;
            double right=100;
            double centr;
            do
            {
                centr = (left + right) / 2;
                if (funk(centr) == 0)
                    break;
                else if (funk(centr) > 0)
                    right = centr;
                else left = centr;
            } while (Math.Abs(left - right) > epc);
            Console.WriteLine(centr);
        }
    }
}
