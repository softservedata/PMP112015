#include"iostream"
#include<iomanip>
using namespace std; 
class myClass
{
private:
	char*pokazz;
	int size;
	public:
		myClass() :  pokazz(NULL), size(0) {}
		myClass(const myClass&a)
		{
			if (this != &a)
			{
				size = a.size;
				
				pokazz = new char[size];
				for (int i = 0; i < size; i++)
					pokazz[i] = a.pokazz[i];
			}
		}
		myClass &operator = (const myClass&a)

		{
			if (this != &a)
			{
				delete[]pokazz;
				size = a.size;
				pokazz = new char[size];
				for (int i = 0; i < size; i++)
					pokazz[i] = a.pokazz[i];
			}
			return*this;
		}

	void func()
	{
		setlocale(LC_ALL, "ukr");
		pokazz = "i said thatere you ";
		int L = strlen(pokazz);
		const int MAx = 99;
		char str_dop[MAx];
		int L2, q, k = 0, count = 0;
		for (int j = 0; j < L; j++)
		{
			if (pokazz[j] == ' ')
			{
				q = j;
				for (int j = 0; j < q - k; j++)
				{
					str_dop[j] = pokazz[count];
					count++;
				}
				count++;
				str_dop[q - k] = '\0';
				k = count;
				L2 = strlen(str_dop);
				cout << "Вивiд стрiчки до пробiлу :" << str_dop << "\nДовжина цiєї стрiчки :" << L2 << endl;
				if (L2 != 1 && L2 % 2 != 0)
				{
					for (int j = 0; j < L / 2 + 1; j++)
					{
						if (j == L2 / 2)
						{
							cout << "Елемент , який знаходиться посерединi стрiчки : " << str_dop[j] << "\n__________________________\n\n";
						}
					}
				}
				else
				{
					if (L2 % 2 == 0)
						cout << "Ця стрiчка має парну довжину !" << "\n_____________________________\n\n";
					else if (L2 == 1)
						cout << "Ця стрiчка має незадовiльну одиничну довжину !" << "\n__________________________\n\n";
				}
				for (int j = 0; j < q; j++)
				{
					str_dop[j] = NULL;
				}
			}
		}
		
	
	}
	~myClass() { if(size)delete[] pokazz; }

};
int main()
{
	myClass str;
	str.func();
	system("pause");
	return 0; 
}
