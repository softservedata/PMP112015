#include<iostream>
using namespace std;



double Dob(double left[], double right[])
{
	double res = 0;
	for (int i = 0; i < 3; i++)
	{
		res += left[i] * right[i];
	}
	return res;
}
void CountX(double y[], double x[])
{
	int lenX = 0;
	for (int i = 0; i < 3; i++)
	{
		x[i] = y[i] / pow(Dob(y, y), 0.5);
	}
}
void Ax(double **A, double x[], double y1[])
{

	int lenA = 3;
	double *q = new double[3];
	for (int i = 0; i < 3; i++)
	{
		for (int j = 0; j < 3; j++)
		{
			q[j] = A[i][j];
			cout << q[j] << endl;
		}
		y1[i] = Dob(q, x);
	}
}
double countL(double y[], double x[])
{
	return Dob(y, y) / Dob(y, x);
}


void main()
{
	int n;
	n = 3;
	double eps = 0.0001;
	double l = 0;
	double l1 = 0;
	double *y = new double[3];
	for (int i = 0; i < 3; i++)
	{
		cout << "Enter y1 [" << i << "]: ";
		cin >> y[i];
			}
	double *y1 = new double[3];
	for (int i = 0; i < 3; i++)
	{
		cout << "Enter y2 [" << i << "]: ";
		cin >> y1[i];
	}
	double **A = new double*[3];
	for (int i = 0; i < 3; ++i)
	{
		A[i] = new double[3];
		for (int j = 0; j < 3; ++j)
		{
			cout << "Enter element[" << i << "][" << j << "]: ";
			cin >> A[i][j];
		}
	}
	double *x = new double[3];
	CountX(y, x);
	int i = 0;
	do
	{
		cout << "done: " << i << endl;
		l = l1;
		for (int i = 0; i < 3; i++)
		{
			y[i] = y1[i];
		}
		Ax(A, x, y1);
		l1 = countL(y1, x);
		CountX(y1, x);
		for (int i = 0; i < 3; ++i)
		{
			cout << y1 << "[" << i << "]" << ":" << y1[0] << endl;
			cout << "l1: " << l1 << endl;
			cout << "l: " << l << endl;
		}
		++i;
	} while (abs(l1 - l) > eps);

	
}
