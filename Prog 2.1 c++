#include<iostream>
#include<cstring>
using namespace std;

class Reversed
{
private:
	char *arr;
	int rozmir;
	char *token;
	char * pch;
public:

	Reversed(int n)
	{
		rozmir = n;
		this->arr = new char[253];
		cin.getline(arr, 253);
	}
	Reversed(Reversed& temp)
	{
		this->rozmir = temp.rozmir;
		this->arr = temp.arr;
	}

	~Reversed()
	{
	}

	void sep()
	{
		char temp;
		int len;
		pch = strtok_s(arr, " ", &token);
		while (pch != NULL)   // пока есть лексемы
		{
			
			len = strlen(pch);
			for (int i = 0; i < len / 2; i++)
			{
				temp = pch[i];
				pch[i] = pch[len - i - 1];
				pch[len - i - 1] = temp;
			}
			cout << pch << "\n";
			pch = strtok_s(NULL, " ", &token);
		}
	}

	/*void revers(char arr[])
	{
		char temp;
		int i, len = strlen(arr);
		for (i = 0; i < len / 2; i++)
		{
			temp = arr[i];
			arr[i] = arr[len - i - 1];
			arr[len - i - 1] = temp;
		}
	}*/

	/*void perevirka()
	{
		cout << '\n';
		for (int m = 0; m < rozmir; ++m)
		{
			revers(arr[m]);
			cout << arr[m] << endl;
		}
		cout << '\n';
	}*/
};




void main()
{
	Reversed A(253);
	A.sep();
	
	system("pause");
}
