		g=rand()%1000;
		if(g==0){g=g+1;}
		if(g%3==0){push_kratne3(g);}

		else{push2_ne_kratne3(g);}
		dilnuk=g/3.0;
		cout<<"Random number: "<<g<<"\t"<<g<<"/3= "<<dilnuk<<endl;
	}cout<<"\n"<<"   "<<"Chusla kratni 3 v obernenomy poryadky:\n "<<endl;
		while(empty()!=false){
		top();cout<<"\t\t"<<st[st_size]<<"    "<<endl;
		pop();}
		cout<<"\n"<<"   "<<"Chusla ne kratni 3 v obernenomy poryadky: \n"<<endl;
	while(empty2()!=false){
	
		top2();cout<<"\t\t"<<st2[st_size2]<<"    "<<endl;
		
		pop2();}

    system ("pause");
