#include<iostream>

 
using namespace std;
 
int st[1000];
int st_size=0;
int st2[1000]; 
int st_size2=0;
 
int push_kratne3 (int x)
{
    st[++st_size] = x;

	return st_size;
}
void pop ()
{
    st[st_size] = 0;
	st_size--;
}
int push2_ne_kratne3 (int x)
{
    st2[++st_size2] = x; 

	return st_size2;
}
void pop2 ()
{
    st2[st_size2] = 0;
	st_size2--;
}
 
int top ()
{
    return st[st_size];
}
 
int top2 ()
{
    return st2[st_size2];
}
 
bool empty ()
{
    if (st_size >= 1)
        return true;
 
    return false; 
}
 
bool empty2 ()
{
    if (st_size2 >= 1)
        return true;
 
    return false; 
}
 

