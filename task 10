#include <iostream>
#define MAX  4

using namespace std;

struct Top
{
	int top;
	int edge[MAX];
	Top()
	{
		for (int i = 0; i < MAX; i++)
		{
			edge[i] = 0;
		}
	}
	void set(int _edge)
	{
		edge[_edge] = 1;
	}
};

class Earl
{
public:
	Top count[MAX];
	Earl()
	{
		for (int i = 0; i < MAX; i++)
		{
			count[i].top = i;
		}
	}
	void set(int _top, int _edge)
	{
		count[_top].set(_edge);
	}
	void view()
	{
		for (int i = 0; i < MAX; i++)
		{
			cout << "Earl " << i << ": \n";
			for (int j = 0; j < MAX; j++)
			{
				if (count[i].edge[j] == 1)
				{
					cout << "( " << i << " , " << j << " )\n";
				}
			}
		}
	}
	void reset()
	{
		for (int i = 0; i < MAX; i++)
		{
			for (int j = 0; j < MAX; j++)
			{
				if (count[i].edge[j] == 1)
				{
					count[i].edge[j] = 0;
				}
				else
				{
					count[i].edge[j] = 1;
				}
			}
		}
	}
};

void main()
{
	Earl test;
	test.set(1, 3);
	test.set(1, 2);
	test.set(2, 3);
	test.set(3, 1);
	test.set(0, 3);
	test.view();
	test.reset();
	cout << "\n\n";
	test.view();
	system("pause");
}
