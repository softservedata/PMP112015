

#ifndef STACK_H
#define STACK_H
#include "iostream"
using std::cin;
using std::cout;
using std::endl;
const int max_size = 10;
struct Stack
{
private:
	int top;
	char data[max_size];
public:
	bool Is_Empty();
	void Create_Stack();
	int Push(char x);
	char Pop();

};
#endif

/////_Stack.cpp_/////

#include "stack.h"
bool Stack::Is_Empty()
{
	return (top == 0);
}

void Stack::Create_Stack()
{
	top = 0;
}

int Stack::Push(char x)
{
	if (top == max_size)
	{
		cout << "Stack Overflov..."; return 0;
	}
	else
	{
		data[top] = x;
		++top;
		return 1;
	}

}
char Stack::Pop()
{
	if (Is_Empty())
	{
		cout << "Stack is Empty..."; return 0;
	}
	else
	{
		--top;
		return data[top];
	}

}



/////_main.cpp_/////



#include "stack.h"
#include"iostream"
using namespace std;

int main()
{
	const int count = 2;
	int n;
	char x;
	Stack s[count];
	for (int i = 0;i<count;i++)
	{
		s[i].Create_Stack();
		cout << "\ncount of symbols in " << i + 1 << " line=";
		cin >> n;
		for (int j = 0;j<n;j++)
		{
			cout << "\nnext symbols : ";
			cin >> x;
			s[i].Push(x);
		}
	}

	for (int i = 0;i<count;i++)
	{
		while (!s[i].Is_Empty())
			cout << s[i].Pop() << " ";
		cout << "\n____________________________\n\n\n";
	}
	system("pause");
	return 0;
}
