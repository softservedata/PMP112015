2)Class.h

class Way
{
private:
	char Mass[6] = { 'v','v','v','v','v' };
public:
	void add(char n)
	{
		for (int i = 0; i < 5; i++)
			if (Mass[i] == 'v')
			{
				Mass[i] = n; break;
			}
	}
	int GetWay(char k)
	{
		int z = 0;
		for (int i = 0; i < 5; i++)
		{
			if (Mass[i] == k)
			{
				z++;
			}
		}
		return z;
	}
};
