2)NewResult.cpp

#include <iostream>
#include <string>
#include "Class.h"
using namespace std;

void NewResult(char t, char l)
{
	Way a;       //Data
	a.add('b');  //Data
	a.add('c');  //Data
	Way b;       //Data
	b.add('c');  //Data
	Way c;       //Data
	Way d;       //Data
	d.add('a');  //Data
	Way e;       //Data
	e.add('d');  //Data
	switch (t)
	{
	case 'a':
	{
		if (a.GetWay(l))
		{
			cout << "there is a way from 'a' to " << l << endl;
		}
		else
		{
			cout << "there is no way from 'a' to" << l << endl;
		}break;
	}
	case 'b':
	{
		if (b.GetWay(l))
		{
			cout << "there is a way from 'b' to " << l << endl;
		}
		else
		{
			cout << "there is no way from 'b' to" << l << endl;
		}break;
	}
	case 'c':
	{
		if (c.GetWay(l))
		{
			cout << "there is a way from 'c' to " << l << endl;
		}
		else
		{
			cout << "there is no way from 'c' to" << l << endl;
		}break;
	}
	case 'd':
	{
		if (d.GetWay(l))
		{
			cout << "there is a way from 'd' to " << l << endl;
		}
		else
		{
			cout << "there is no way from 'd' to" << l << endl;
		}break;
	}
	case 'e':
	{
		if (e.GetWay(l))
		{
			cout << "there is a way from 'e' to " << l << endl;
		}
		else
		{
			cout << "there is no way from 'e' to" << l << endl;
		}break;
	}
	default:
	{
		cout << "You inputed element , which does not exist . ";
	}
	}
}

