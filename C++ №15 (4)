Car.h:


#include<iostream>
using namespace std;

class Car
{
protected:
	double weight;
	double max_speed;
public:
	Car(double veight=700.0,double max_speed= 100)
	{
		this->weight = veight;
		this->max_speed = max_speed;
	}
	Car(const Car& ob)
	{
		this->weight = ob.weight;
		this->max_speed = ob.max_speed;
	}
	virtual void Setveight(double weight)
	{
		this->weight = weight;
	}
	virtual void Getweight()
	{
		cout << "weight =  " << this->weight << endl;
	}
	virtual void Setmax_speed(double max_speed)
	{
		this->max_speed = max_speed;
	}
	virtual void Getmax_speed()
	{
		cout << "max speed =  " << this->max_speed <<" km/h"<< endl;
	}
	virtual void information()
	{
		cout << "weight =  " << this->weight << endl;
		cout << "max speed =  " << this->max_speed << " km/h" << endl;
	}
};


class LightCar:public Car
{
protected:
	int doors;
public:
	LightCar(double weight=700, double max_speed=100, int doors=4) :Car(weight, max_speed)
	{
		this->doors = doors;
	}
	LightCar(const LightCar& ob):Car(ob)
	{
		this->doors = ob.doors;
	}
	virtual void Setdoors(int doors)
	{
		this->doors = doors;
	}
	virtual void Getdoors()
	{
		cout << "quantity of doors =  " << this->doors << endl;
	}
	void information()
	{
		Car::information();
		cout << "quantity of doors =  " << this->doors << endl;
	}

};


class Lorry :public Car
{
protected:
	double carryweight;
public:
	Lorry(double weight=4000, double max_speed=80, int carryweight = 1000) :Car(weight, max_speed)
	{
		this->carryweight = carryweight;
	}
	Lorry(const Lorry& ob) :Car(ob)
	{
		this->carryweight = ob.carryweight;
	}
	virtual void Setcarryweight(double carryweight)
	{
		this->carryweight = carryweight;
	}
	virtual void Getcarryweight()
	{
		cout<<"Carry weight =  "<< this->carryweight<<" kg"<<endl;
	}
	void information()
	{
		Car::information();
		cout << "Carry weight =  " << this->carryweight << " kg" << endl;
	}
};
