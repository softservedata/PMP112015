matrix=[[1, 2, 3, 4, 5], [5, 10, 3, 2, 1], [6, 7, 8 ,9, 0], [10, 9, 8, 7, 6], [1, 1, 1, 1, 1]]
n=5
print_matrix(matrix, n)
if symetria(matrix, n)==1:
    print('Matrix is symmetric')
else:
    print('Matrix isn`t symmetric')
if perestanovka(matrix, n)==0:
    print('Matrix can not be symmetric')
