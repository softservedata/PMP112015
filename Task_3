import random
import itertools
def print_matrix(x, n):
    for i in x:
        for j in i:
            print (j, end=' ')
        print()
def symetria(x, n):
    for i in range(n):
        for j in range (n):
            if j!=n-1-i:
                if x[i][j]!=x[n-1-i][n-1-j]:
                    return 0
    return 1
