};

void main()
{
	Vector *A = new Matrix(2, 2, 2);
	Vector *B = new Matrix(3, 3, 3);
	Vector *C = new Matrix(4, 4, 4);
	//B = A;
	A->outMatrix();
	A->outVector();
	A->multiply();
	A->outMultiplied();
	B->outMatrix();
	B->outVector();
	B->multiply();
	B->outMultiplied();
	C->outMatrix();
	C->outVector();
