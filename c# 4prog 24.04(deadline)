using System;
using System.Diagnostics;
using System.ComponentModel;

namespace ConsoleApplication1
{
    class MyProcess
    {
        private static String RemoveSpaces(string txt)
        {
            String text;
            text = txt.Replace("  ", " ");

            if (
                text.Contains("  ")     || text.Contains("   ") ||
                text.Contains("    ")   || text.Contains("     ") ||
                text.Contains("      ") || text.Contains("       ") ||
                text.Contains("        ")
                )
            {
                RemoveSpaces(text);
            }
            return text; 
        }

        private static string ReverseString(string s)
        {
            char[] arr = s.ToCharArray();
            Array.Reverse(arr);
            return new string(arr);
        }

        static void Main()
        {
            
        Console.WriteLine("Enter length of array: ");
            int length = int.Parse(Console.ReadLine());

            String[] array = new String[length];
            Console.WriteLine("Enter sentence with words splitted at least with 1 space: ");
            String sentence = Convert.ToString(Console.ReadLine());

            sentence = MyProcess.RemoveSpaces(sentence);


            Console.WriteLine("array:");
            for (int i = 0; i < length; i++)
                {
                    Console.Write(array[i]);
                }

                array = sentence.Split(' ');
            for (int i = 0; i < array.Length; i++)
            {
                array[i] = ReverseString(array[i]);
                Console.WriteLine("Your word: " + array[i]);
            }
        }
    }
}
