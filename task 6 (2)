//#include "stdafx.h"
#include<iostream>
#include<string>
#include <clocale>

using namespace std;
template<class K>
class Line
{
private:
	
	K t,l,k;
	int c;
public:
	Line()
	{
		t = "";
		l = "";
		k = "";
		cout << "choose language (1-lat; 2-kyr)" << endl;
		cin >> c;
	}
	Line(K s)
	{
		t = s;
	}
	Line(Line &s)
	{
		this->t = s.t;
	}
	void show()
	{
		/*setlocale(LC_ALL, "rus");*/
		cout << t << endl;
	}
	
	void push(K x)
	{
		/*setlocale(LC_ALL, "rus");*/
	
		string y;
		cout << "push: ";
		
		
		for (int i = 0; i < x.size(); i++)
		{ 
			
			if ((c == 1) && ((int)x[i] >= (int)'a') && ((int)x[i] <= (int)'z'))
			{
				y = { x[i] };
				t = t + y;
			}
			if ((c == 2) && ((int)x[i] >= (int)'а') && ((int)x[i] <= (int)'я'))
			{
				/*cout << 1;*/
				y = { x[i] };
				t = t + y;
			}
		}
		cout << t << endl;
	}
	void pop()
	{
		int k = t.size();
		cout << t[k - 1]<<endl;
		t=t.substr(0,k-1 );
	}
	void print()
	{
		for (int i = t.size() - 1; i >= 0; i--)cout << t[i];
		cout << endl;
	}
	void split(K z)
	{
		/*setlocale(LC_ALL, "rus");*/
		string x;
		for (int i = 0; i < z.size(); i++)
		{
			if ( (((int)z[i] >= (int)'a') && ((int)z[i] <= (int)'z'))/* || (((int)l[i] >= (int)'A') && ((int)l[i] <= (int)'Z'))*/)
			{
				x = { z[i] };
				l=l+x;
			}
			if ((((int)z[i] >= (int)'а') && ((int)z[i] <= (int)'я'))/* || (((int)l[i] >= (int)'А') && ((int)l[i] <= (int)'Я'))*/)
			{
				x = { z[i] };
				k = k + x;
			}
		}
		cout << l << endl << k << endl;
	}
	void change()
	{
		if (c==1)
		{
			c = 2;
			l = t;
			t = k;
			cout << l<<endl<<endl<<"kyr stack" << endl;
		}
		else
		{
			c = 1;
			k = t;
			t = l;
			cout <<k<<endl<<endl<< "lat stack" << endl;
		}
	}
};

int main()
{
	setlocale(LC_ALL, "Ukrainian");
	
	/*string s;
	s = "йцукенгшщзждлорпав";
	cout << s<<endl;*/
	/*cout << (int)'р' << endl;*/
	Line<string> a;

	a.split("asd123про");

	a.push("asd123про");
	a.push("asd123про");
	a.push("asd123про");
	a.pop();
	a.pop();
	/*a.show();*/
	a.change();
	a.push("asd123про");
	a.push("asd123про");
	a.change();
	a.push("asd123про");
	a.push("asd123про");
	a.change();

	/*a.show();*/
	/*a.split();*/

	/*a.pop();
	a.show();*/
	system("pause");
}
